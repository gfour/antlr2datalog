#include "../workspace/schema.dl"
#include "../logic/base-logic.dl"

// .output BASE_ParentOf
// .output BASE_SourceFileId

// Function "name" declared at source file "location".
.decl Function(name: symbol, location: symbol)
.output Function

Function(name, location) :-
  Funcdef_NAME(fd, _, name, line, _, _, pos),
  BASE_ParentOf(rootNode, fd),
  BASE_SourceFileId(path, _, rootNode),
  location = cat(path, cat(":(", cat(to_string(line), cat(",", cat(to_string(pos), ")"))))).
